<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fetchFolderName"
        style="@style/FetchDialogTitleTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:minLines="2"
        android:text="@string/dialog_fetch_audio_folder_name" />

    <TextView
        android:id="@+id/fetchFileName"
        style="@style/FetchDialogDescTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:minLines="2"
        android:text="@string/dialog_fetch_audio_track_name" />

</LinearLayout>