<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/primary"
    tools:context=".ui.about.AboutFragment">

    <RelativeLayout
        android:id="@+id/aboutAppLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/AppNameTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/versionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutAppLogo"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/AboutTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_version" />

        <TextView
            android:id="@+id/versionValue"
            style="@style/AboutTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="1.0.0" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/versionContainer"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/contactsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/contactsTitle"
            style="@style/AboutTitleAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_contact" />

        <View
            android:id="@+id/divider2"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/contactsTitle"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/mailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_mail" />

            <TextView
                android:id="@+id/emailTitle"
                style="@style/AboutTextAppearance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/emailIcon"
                android:text="@string/about_mail" />

        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mailContainer"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/vkContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/vkIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_vk" />

            <TextView
                android:id="@+id/vkTitle"
                style="@style/AboutTextAppearance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/vkIcon"
                android:text="@string/about_vk" />

        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/vkContainer"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</RelativeLayout>
