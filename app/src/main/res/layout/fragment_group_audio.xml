<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.fesskiev.mediacenter.widgets.MaterialProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_gravity="top"
        android:indeterminate="true"
        android:visibility="invisible"
        app:backgroundColour="@color/primary"
        app:duration="2000"
        app:progressColour="@color/accent" />

    <android.support.v7.widget.CardView
        android:id="@+id/emptyGroupAudioCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_empty_content_height"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/card_view_margin_bottom_big"
        android:layout_marginEnd="@dimen/card_view_margin_end"
        android:layout_marginStart="@dimen/card_view_margin_start"
        android:layout_marginTop="@dimen/card_view_margin_top"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/card_view_elevation"
        app:contentPadding="@dimen/card_view_content_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/EmptyAudioTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toEndOf="@+id/searchButton"
                android:text="@string/user_group_audio_empty" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/searchButton"
                style="@style/ButtonStyle"
                android:layout_width="84dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/search_button" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
