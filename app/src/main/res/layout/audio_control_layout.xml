<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.fesskiev.mediacenter.widgets.controls.AudioVolumeSeekView
        android:id="@+id/audioVolumeControl"
        android:layout_width="@dimen/audio_control_width"
        android:layout_height="@dimen/audio_control_height"
        android:layout_centerInParent="true"
        app:circleColor="@color/primary_light"
        app:progressColor="@color/primary"
        app:text="100"
        app:textColor="@color/secondary_text" />

    <com.fesskiev.mediacenter.widgets.buttons.PlayPauseButton
        android:id="@+id/playPauseButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>
