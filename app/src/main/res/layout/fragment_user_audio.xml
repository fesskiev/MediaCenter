<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.fesskiev.mediacenter.widgets.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_gravity="top"
            android:indeterminate="true"
            android:visibility="invisible"
            app:backgroundColour="@color/primary"
            app:duration="2000"
            app:progressColour="@color/accent" />

        <android.support.v7.widget.CardView
            android:id="@+id/emptyUserAudioCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_empty_content_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/card_view_margin_bottom_big"
            android:layout_marginEnd="@dimen/card_view_margin_end"
            android:layout_marginStart="@dimen/card_view_margin_start"
            android:layout_marginTop="@dimen/card_view_margin_top"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_view_elevation"
            app:contentPadding="@dimen/card_view_content_padding">

            <TextView
                style="@style/EmptyAudioTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/user_audio_empty" />

        </android.support.v7.widget.CardView>

    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>
