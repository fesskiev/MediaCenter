<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/stateEqualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/saveEQStateButton"
            style="@style/EQ.Button"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/button_save_track_info_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <com.fesskiev.player.widgets.eq.BandControlView
            android:id="@+id/bandControlLow"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            app:band="0"
            app:bandName="Low" />

        <com.fesskiev.player.widgets.eq.BandControlView
            android:id="@+id/bandControlMid"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:band="1"
            app:bandName="Mid"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <com.fesskiev.player.widgets.eq.BandControlView
            android:id="@+id/bandControlHigh"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            app:band="2"
            app:bandName="High"
            android:layout_below="@+id/bandControlLow"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



</LinearLayout>

