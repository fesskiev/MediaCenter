<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/primary"
    tools:context="com.fesskiev.player.ui.settings.SettingsFragment">


    <RelativeLayout
        android:id="@+id/audioSettingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audioSettingsTitle"
            style="@style/AboutTitleAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_media_title" />

        <View
            android:id="@+id/divider2"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/audioSettingsTitle"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/playAudioContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/play_audio_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/settings_play_music" />

        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/playAudioContainer"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_media_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/settings_searching_files" />

        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/searchContainer"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/downloadSettingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audioSettingsContainer"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/downloadSettingsTitle"
            style="@style/AboutTitleAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_download_title" />

        <View
            android:id="@+id/divider5"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/downloadSettingsTitle"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/downloadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider5"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/downloading_wifi_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/settings_wifi_download" />

        </RelativeLayout>

        <View
            android:id="@+id/divider6"
            style="@style/DividerStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/downloadingContainer"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</RelativeLayout>
