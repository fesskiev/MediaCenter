<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageTab"
        android:layout_width="@dimen/tab_icon_width"
        android:layout_height="@dimen/tab_icon_height"
        android:contentDescription="@string/app_name"
        tools:src="@android:drawable/ic_dialog_info" />

    <TextView
        style="@style/CustomTabStyle"
        android:id="@+id/titleTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/tab_margin"
        tools:text="Артист" />

</LinearLayout>