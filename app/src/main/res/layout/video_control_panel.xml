<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="@color/track_background"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resizeModeState"
            style="@style/VideoPlayerTextAppearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_video_resize"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            tools:text="@string/app_name" />


        <ImageView
            android:id="@+id/audioTrackButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_track_audio" />

        <ImageView
            android:id="@+id/videoTrackButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_track_video" />

        <ImageView
            android:id="@+id/subTrackButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_track_subtitle" />

    </LinearLayout>

</android.support.v7.widget.CardView>